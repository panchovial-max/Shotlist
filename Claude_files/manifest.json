{
  "name": "Localhost Sync",
  "id": "shotlist-localhost-sync",
  "api": "1.0.0",
  "main": "code.js",
  "ui": "ui.html",
  "version": "1.0.0",
  "description": "Sync your Figma designs with a local development server for real-time collaboration",
  "editorType": ["figma", "figjam"],
  "containsWidget": false,
  "widgetApi": "1.0.0",
  "permissions": [],
  "networkAccess": {
    "allowedDomains": [
      "localhost:8000",
      "localhost:8001",
      "127.0.0.1:8000",
      "127.0.0.1:8001",
      "localhost",
      "127.0.0.1"
    ],
    "devAllowedDomains": [
      "localhost:8000",
      "localhost:8001", 
      "127.0.0.1:8000",
      "127.0.0.1:8001",
      "localhost",
      "127.0.0.1"
    ],
    "reasoning": "This plugin requires network access to sync designs with the local development server running on localhost ports 8000 and 8001."
  },
  "documentAccess": "dynamic-page",
  "menu": [
    {
      "name": "Sync with Localhost",
      "command": "sync"
    },
    {
      "name": "Settings",
      "command": "settings"
    },
    {
      "separator": true
    },
    {
      "name": "Stop Sync",
      "command": "stop"
    }
  ],
  "relaunchButtons": [
    {
      "command": "open",
      "name": "Open Localhost Sync"
    }
  ],
  "capabilities": [],
  "build": "1"
}